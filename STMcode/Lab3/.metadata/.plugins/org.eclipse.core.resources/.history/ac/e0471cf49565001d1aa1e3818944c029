#include "seven_seg.h"

int led_buffer[MAX_LED] = {1, 2, 3, 4};

//
static GPIO_TypeDef *seven_seg_port[MAX_LED] = {
		GPIOA,
		GPIOA,
		GPIOA,
		GPIOA
};
static uint16_t seven_seg_pin[MAX_LED] = {
		GPIO_PIN_9,
		GPIO_PIN_10,
		GPIO_PIN_11,
		GPIO_PIN_12
};
//

unsigned char SEG[10] = {0x40, 0x79, 0x24, 0x30, 0x19, 0x12, 0x02, 0x78, 0x00, 0x10};
void display7SEG(int num) {
	GPIOB->ODR = SEG[num];
}

int index_led = 0;
void update7SEG(int index){
	  for (unsigned char i = 0; i < MAX_LED; i++) {
		  HAL_GPIO_WritePin(seven_seg_port[i], seven_seg_pin, RESET);
	  }
	  HAL_GPIO_WritePin(seven_seg_port[index], seven_seg_pin, SET);
	  display7SEG(led_buffer[0]);
}
